(jbuild_version 1)

(library (
  (name babilim)
  (public_name babilim)
  (libraries (metaprintf compiler-libs.common))
))

(rule (
  (targets (fr.bo))
  (deps (../translator/translator.exe ../translations/fr.po))
  (action (run ../translator/translator.exe
           -input
           ../translations/fr.po
           -output ${@}
  ))
))

(install(
  (section share)
  (files (fr.bo))
))
